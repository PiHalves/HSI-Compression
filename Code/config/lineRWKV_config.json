{
  "data": {
    "root_dir": "/path/to/your/hyperspectral/data",
    "mode": "easy",
    "num_parallel_calls": 32,
    "prefetch_buffer": 32,
    "data_mode": 2
  },
  "model": {
    "input_channels": 202,
    "dim": 128,
    "num_layers": 4,
    "time_decay": 0.99,
    "prediction_mode": "spectral"
  },
  "trainer": {
    "learning_rate": 1e-4,
    "weight_decay": 1e-5,
    "loss_type": "prediction_residual",
    "use_mixed_precision": false
  },
  "training": {
    "epochs": 100,
    "early_stopping_patience": 15
  },
  "output_dir": "./results"
}
